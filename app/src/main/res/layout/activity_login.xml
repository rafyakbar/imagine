<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorButtonNormal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/loginactivity_logo_imageview"
            android:layout_width="327dp"
            android:layout_height="208dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginRight="8dp"
                android:gravity="right|center"
                android:paddingRight="33dp"
                android:text="Email"
                android:textColorLink="?attr/colorPrimaryDark"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/loginactivity_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-85dp"
                android:layout_marginTop="40dp"
                android:textColorLink="@color/colorAccent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="103dp"
                android:layout_height="50dp"
                android:layout_marginRight="8dp"
                android:gravity="right|center"
                android:text="Password"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/loginactivity_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="-85dp"
                android:layout_marginTop="40dp"
                android:inputType="textPassword"
                android:textColorLink="@color/colorPrimaryDark" />

        </LinearLayout>

        <Button
            android:id="@+id/loginactivity_login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/button_style"
            android:text="Login"
            android:textColor="@color/cardview_light_background" />

        <Button
            android:id="@+id/loginactivity_signup_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginBottom="50dp"
            android:background="@drawable/button_style"
            android:paddingRight="0dp"
            android:text="Dont't have an account? Click me!"
            android:textColor="@color/cardview_light_background" />

    </LinearLayout>

</ScrollView>